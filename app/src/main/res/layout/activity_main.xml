<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

  <LinearLayout
      android:id="@+id/container"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:paddingLeft="@dimen/horizontal_margin"
      android:paddingRight="@dimen/horizontal_margin"
      android:paddingTop="@dimen/vertical_margin"
      android:paddingBottom="@dimen/vertical_margin"
      android:orientation="vertical"
      android:animateLayoutChanges="true"
      >

    <TextView
        android:id="@+id/secondary_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lets_get_in_the_zen_flow"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginTop="@dimen/vertical_margin"
        android:layout_marginBottom="@dimen/vertical_margin"
        />

    <TextView
        android:id="@+id/main_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enable_airplane_mode_to_begin"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:layout_marginTop="@dimen/vertical_margin"
        android:layout_marginBottom="@dimen/vertical_margin"
        />

    <TextView
        android:id="@+id/highest_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/template_highest_time_offline"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginTop="@dimen/vertical_margin"
        android:layout_marginBottom="@dimen/vertical_margin"
        android:visibility="gone"
        />

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/airplane_mode_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/vertical_margin"
        android:layout_marginBottom="@dimen/vertical_margin"
        android:visibility="gone"
        />


  </LinearLayout>

</ScrollView>
